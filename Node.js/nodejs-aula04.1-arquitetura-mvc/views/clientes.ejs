<%- include ('partials/navbar.ejs') %>
    <h1>Bem-vindo a página de clientes!</h1>

    <hr>

    <h3>Lista de clientes:</h3>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nome:</th>
                <th>CPF:</th>
                <th>Endereço:</th>
            </tr>
        </thead>
        <tbody>
            <!--forEach-->
            <% clientes.forEach(cliente => { %>
                <tr>
                    <td><%= cliente.nome %></td>
                    <td><%= cliente.CPF %></td>
                    <td><%= cliente.endereco %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <br>

    <a href="/"><< Voltar</a>
